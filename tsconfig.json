{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "../js",
    "experimentalDecorators": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}